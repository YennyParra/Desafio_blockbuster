<p style="color: green"><%= notice %></p>
<div class="container">
<h1>Clients</h1>


 
<div id="clients">
<table class="table table-striped">
<thead>
        <tr>
          <th scope="col">id</th>
          <th scope="col">Name</th>
          <th scope="col">Age</th>
          <th scope="col">Movie</th>
          <th scope="col" colspan="3"></th>
        </tr>
      </thead>
      
<tbody>

<% @clients.each do |client| %>
<tr>
<td><%= client.id %></td>
<td><%= client.name %></td>
<td><%= client.age %></td>
<td><%= client.movies.name if client.movies.name %></td>

<td type= "button", class= "btn btn-dark"><%= link_to "Show this client", client %></td>
<td type= "button", class= "btn btn-dark"><%= link_to "New client", new_client_path %></td>

<%= render client %>


<% end %>


</tbody>
</table>

</div>
</div>